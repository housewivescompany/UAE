<div class="auth-card">
  <div class="text-center mb-4">
    <h3>UAE</h3>
    <p class="auth-sub">Universal Agentic Engine</p>
  </div>

  <form method="POST" action="/login">
    <div class="mb-3">
      <label class="form-label" style="color:var(--uae-text-muted);font-size:.8rem">Email</label>
      <input type="email" name="email" class="form-control" placeholder="you@company.com" required autofocus>
    </div>
    <div class="mb-4">
      <label class="form-label" style="color:var(--uae-text-muted);font-size:.8rem">Password</label>
      <input type="password" name="password" class="form-control" placeholder="Enter your password" required>
    </div>
    <button type="submit" class="btn btn-primary w-100">Sign In</button>
  </form>
</div>
